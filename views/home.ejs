<html>
    <head>
        <title><%=locals.title%></title>
        <script src="https://kit.fontawesome.com/108f3e338d.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css"> 
    </head>
    <body>
        <h1 id="page-heading">
        <i class="fa-solid"></i>
        <i class="fa-solid fa-user"></i>
        My contact list</h1>
        <div id="contacts-list-container">
            <ul>
            
            <% for(let i of contact_list) {%>
                <li class="contact">
                <div class="details"> 
                    <div ><%=i.name%> </div>
                    <div id="pp"><%=i.phone%></div>
                    
                </div>
                <div class="delete-button">
                    <a href="/delete-contact/?id=<%= i.id%>">
                        <i class="fas fa-trash-alt"></i>
                    </a>

                </div>
             
                </li>
            <%}%>
            </ul>
        </div>

            <form action="/create-contact" method="Post" id="form">
                <input type="text" name="name" placeholder="Name">
                <input type="text" name="phone" placeholder="Phone">
                <input type="submit" value="ADD">
            </form>
        </ul>

        <script src="assests/js/home.js"></script>

    </body>
</html>